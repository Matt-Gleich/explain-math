\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{explainmath}[2021/02/28 Explain Math]

% Required packages
\RequirePackage{amsmath}

%% Bottom explain
\providecommand{\bexplain}[2]{\underbrace{#1}_{\textrm{#2}}}
%% Top explain
\providecommand{\texplain}[2]{\overbrace{#1}^{\textrm{#2}}}

%% Regular explain
\providecommand{\explain}[2]{\textrm{#1}&\rightarrow \begin{cases} #2 \end{cases} \\}

%% Initial equation
\providecommand{\initialeq}[1]{\explain{Initial \textit{eq.}}{#1}}

%% Variable declaration
\providecommand{\variables}[1]{\explain{Variables}{#1}}

%% Problem declaration
\providecommand{\sol}[1]{
    \begin{center}
        \item \textit{Sol.}
        \item #1
    \end{center}
}
